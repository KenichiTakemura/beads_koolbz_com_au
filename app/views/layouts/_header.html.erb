<!-- NAVBAR
================================================== -->
<!-- Wrap the .navbar in .container to center it on the page and provide easy way to target it with .navbar-wrapper. -->
<div class="container navbar-wrapper">

	<div class="navbar navbar-inverse">
		<div class="navbar-inner">
			<!-- Responsive Navbar Part 1: Button for triggering responsive navbar (not covered in tutorial). Include responsive CSS to utilize. -->
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </a>
			<a class="brand" href="<%=root_path(:locale => "en")%>"><%= t("brand.project")%></a>
			<div class="nav-collapse collapse">
				<ul class="nav">
					<li class="active dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t("beads.selection")%><b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li class="nav-header">
								<%= t("beads.regular")%>
							</li>
							<% @regular.each do |category| %>
							<li>
								<a href="<%=Enclink.link_to(category.name)%>"><%= category.name %></a>
							</li>
							<% end %>
							<li class="divider"></li>
							<li class="nav-header">
								<%= t("beads.special")%>
							</li>
							<% @special.each do |category| %>
							<li>
								<a href="<%=Enclink.link_to(category.name)%>"><%= category.name %></a>
							</li>
							<% end %>
						</ul>
					</li>
					<li>
						<a href="#" id="to_about"><%=t("about")%></a>
					</li>
					<li>
						<a href="#" id="to_shop_direct"><%=t("shop_direct")%></a>
					</li>
					<li>
						<a href="#" id="to_shop_online"><%=t("shop_online")%></a>
					</li>
					<% if @mycart.present? %>
					<li>						
						<a href="<%=new_order_path%>" id="to_mycart"><%=t("cart.mycart")%>&nbsp;<span class="badge badge-info"><%= @mycart.present? ? @mycart.item.size : 0 %></span></a>
					</li>
					<% end %>
				</ul>
			</div><!--/.nav-collapse -->
			<div class="nav-text pull-right">
				<ul class="nav">
					<li class="active">
						<%= link_to(t("lang.en"),root_path(:locale => "en"))%>
					</li>
					<li>
						<%= link_to(t("lang.jp"), root_path(:locale => "ja"))%>
					</li>
					<li>
						<%= link_to(t("lang.ko"), root_path(:locale => "ko"))%>
					</li>
					<% if current_flyer %>
					<li>
					<a href="<%=destroy_flyer_session_path%>"><%=t("auth.signout")%></a>
					</li>
					<% end %>
					<li>
						<% if !current_flyer %>
						<a href="<%=flyer_omniauth_authorize_path(:facebook)%>"><%= t("auth.signin_with")%>&nbsp;<%= facebook%></a>
						<% else %>
						<%= show_flyer_header %>
						<% end %>
					</li>
				</ul>
			</div>
		</div><!-- /.navbar-inner -->
	</div><!-- /.navbar -->

</div><!-- /.container -->

